<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!-- Définition de l'unité de persistance pour l'application -->
    <persistence-unit name="jpaPU" transaction-type="RESOURCE_LOCAL">
        <!-- Liste des classes d'entités à mapper -->
        <class>entite.TypeAbonnement</class>
        <class>entite.Salle</class>
        <class>entite.Equipement</class>
        <class>entite.Notification</class>
        <class>entite.Membre</class>
        <class>entite.Client</class>
        <class>entite.Abonnement</class>
        <class>entite.DemandeInscription</class>
        <class>entite.Paiement</class>
        <class>entite.MoyenDePaiement</class>
        <class>entite.Horaire</class>
        <class>entite.Seance</class>
        <class>entite.Ticket</class>

        <!-- Configuration des propriétés Hibernate -->
        <properties>
            <!-- Connexion à la base de données PostgreSQL -->
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/gym"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="Jefto"/>

            <!-- Configuration pour la création/mise à jour automatique des tables -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Dialecte pour PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>

</persistence>